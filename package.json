{
  "name": "blizzard-4",
  "version": "0.42.0",
  "license": "GPL-3.0",
  "description": "Emulator & toolchain for the Blizzard 4 16-bit computer.",
  "author": "Daniel Spencer <danielfspencer1@gmail.com>",
  "main": "./electron.js",
  "homepage": "https://github.com/danielfspencer/blizzard-4",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "Blizzard 4",
    "artifactName": "${productName} [${os}-${arch} ver. ${version}].${ext}",
    "directories": {
      "output": "electron_dist"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
      },
    "mac": {
      "target": [
        "dmg"
        ]
      }
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
