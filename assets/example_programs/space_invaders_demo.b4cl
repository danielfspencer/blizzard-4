def shift_right
  var int vram_addr 7168
  var bool carry
  while vram_addr > 6144
    {copy [ram.0] alu.1}
    {copy alu.>> [ram.0]}
    vram_addr--
    {copy [ram.0] ram.1}
    if carry
      vram_addr++
      {copy [ram.0] alu.1}
      {write 0b1000000000000000 alu.2}
      {copy alu.| [ram.0]}
      vram_addr--

def shift_left
  var int vram_addr 6144
  var bool carry
  while vram_addr < 7168
    {copy [ram.0] alu.1}
    {copy alu.<< [ram.0]}
    vram_addr++
    {copy [ram.0] alu.1}
    {write 0b1000000000000000 alu.2}
    {copy alu.ov ram.1}
    if carry
      vram_addr--
      {copy [ram.0] alu.1}
      {write 0b0000000000000001 alu.2}
      {copy alu.| [ram.0]}
      vram_addr++

def shift_down
  var int vram_addr 7167
  while vram_addr > 6144
    {copy ram.0 alu.1}
    {write 32 alu.2}
    {copy [ram.0] [alu.+]}
    vram_addr--

var int space_invader
var int offset
var int limit 440

{write sprite ram.0}
for var int row 16; row < 440; row += 88
  for var int col 1; col < 15; col += 2
    draw_8x8(space_invader,col,row)
  space_invader += 8
free row
free col

while true
  for var int i; i < 8; i++
    shift_right()

  {write sprite ram.0}
  for var int row 16 + offset; row < limit; row += 88
    for var int col 2; col < 15; col += 2
      draw_8x8(space_invader,col,row)
    space_invader += 8
  free row
  free col

  offset += 32
  limit += 32

  shift_down()

  free i
  for var int i; i < 8; i++
    shift_left()

  {write sprite ram.0}
  for var int row 16 + offset; row < limit; row += 88
    for var int col 1; col < 15; col += 2
      draw_8x8(space_invader,col,row)
    space_invader += 8
  free row
  free col

  offset += 32
  limit += 32


  shift_down()


